@{
    ViewData["Title"] = "Fun with D3";
}
<h2>@ViewData["Title"].</h2>


<section id="html-svg">
    <h3>Rendered using svg in html</h3>

    <svg width="50" height="50">
        <circle cx="25" cy="25" r="25" style="fill: lightblue"></circle>
    </svg>

    <svg width="250" height="50">
        <text x="5" y="25">Hi, svg text</text>
    </svg>

</section>
<section id="d3">
    <h3>Rendered using d3</h3>
</section>
<section id="d3-data">
    <h3>D3 data rendering</h3>
    <p>Render a set of svg rectangles using this array to position and size them: [5, 10, 15, 20, 25]</p>
</section>
<section id="d3-bar-chart">
    <h3>D3 bar chart</h3>
</section>
<section id="d3-line-chart">
    <h3>D3 line chart</h3>
</section>
<section id="d3-scatterplot">
    <h3>D3 scatterplot</h3>
</section>
<section id="using-json">
    <h3>Using JSON</h3>
</section>
<section id="using-json-2">
    <h3>Using JSON-2</h3>
</section>
<section id="scale">
    <h3>Adding a scale</h3>
</section>
<section id="axis">
    <h3>Adding an axis</h3>
</section>
<section id="event">
    <h3>Listen to an event</h3>
    <p>Show Labels
        <select id="label-option">
            <option value="all">All</option>
            <option value="minmax">Min/Max</option>
            <option value="none">None</option>
        </select>
    </p>
</section>
<section id="filter">
    <h3>Filter data</h3>
    <p>
        Choose date range
        <select id="date-option">
            <option value="12">Last year</option>
            <option value="6">Last 6 months</option>
            <option value="3">Last quarter</option>
        </select>
    </p>
</section>



@section styles {
    <style>
        section{
            border-bottom: 1px dotted #CCC;
        }
        .axis path,
        .axis line {
            fill: none;
            stroke: black;
            shape-rendering: crispEdges
        }
        .axis text {
            font-family: sans-serif;
            font-size: 10px;
        }

    </style>
}

@section scripts {
<script src="~/lib/d3/d3.js"></script>
<script src="~/js/d3-sample.js"></script>
<script src="~/js/d3-bar-chart.js"></script>
<script src="~/js/d3-line-chart.js"></script>
<script src="~/js/d3-scatterplot.js"></script>
<script src="~/js/d3-json.js"></script>
<script src="~/js/d3-json-2.js"></script>
<script src="~/js/d3-scale.js"></script>
<script src="~/js/d3-axis.js"></script>
<script src="~/js/d3-event.js"></script>
<script src="~/js/d3-filter.js"></script>
}